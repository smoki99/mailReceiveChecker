# Email Monitor Configuration Template
# Copy this file to .env and fill in your actual values

# SMTP Configuration (for sending test emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-smtp-app-password
SMTP_REJECT_UNAUTHORIZED=true

# Mail Server Configuration (for checking received emails)
MAIL_PROTOCOL=imap
MAIL_HOST=imap.gmail.com
MAIL_PORT=993
MAIL_TLS=true
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-imap-app-password
MAIL_REJECT_UNAUTHORIZED=true
MAIL_FROM=your-email@gmail.com
MAIL_TO=your-email@gmail.com

# Uptime Kuma Configuration
KUMA_ENABLED=true
KUMA_SERVER=https://your-uptime-kuma-server.com
KUMA_IDENTIFIER=your-push-monitor-id
KUMA_TIMEOUT=10000
KUMA_RETRIES=3

# Monitoring Configuration
SEND_INTERVAL=5
RECEIVE_TIMEOUT=1
RETRIES=3

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=3000

# Timezone (optional)
TZ=UTC

# Development/Debug (optional)
NODE_ENV=development
DEBUG=false